<div id="yourTaste" class="YourTaste">
  <!-- Favorite Genres -->
  <h2 style="text-align: center;
      font-family: 'Gill Sans', sans-serif">Your Music Taste
  </h2>
  <div class="HorizontalArtistRow" id="horizontalArtistRow">
    <% @topArtists.each do |artist| %>
      <div class="YourTaste_ArtistBox">
        <div class="YourTaste_ArtistImageColumn">
          <% if User.find(artist.artist_id).avatar.attached? %>
            <%= image_tag (User.find(artist.artist_id).avatar), class: "YourTaste_ArtistAvaImage" %>
          <% else %>
            <img src="http://localhost:3000/default-avatar.jpg" class="YourTaste_ArtistAvaImage">
          <% end %>
        </div>
        <div class="YourTaste_ArtistInfoColumn">
          <p style="font-size: x-large; word-break: normal; white-space: normal"><%= User.find(artist.artist_id).name %></p>
          <div class="YourTaste_ArtistGenre">
            Pop
          </div>
          <div class="YourTaste_ArtistGenre">
            Rap
          </div>
          <div class="YourTaste_ArtistGenre">
            Alternative
          </div>
          <br>
