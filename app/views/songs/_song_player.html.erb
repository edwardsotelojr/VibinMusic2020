<div class="musicPlayer">
      <div class="songDetails">
        <div class="songCover">
          <img id="playerCoverImage" src="" class="playerCoverImage">
        </div>
        <div class="songArtist">
          <h3 id="songInfo" class="songInfo"></h3>
          <h3 id="songGenre" class="songInfo"></h3>
          <div id="songArtistAvatar" style="display: block; margin-top: 0px; color: white; ">
          </div>
        </div>
      </div>
    <div class = "Center-Audio">
      <div class="audio-player">
        <div class=audio-buttons>
          <button class="shuffle button_layout" onclick="shuffleSongs()"><i id="play-icon" class="ion-shuffle"></i>
          </button>
          <button class="back button_layout">
            <i id="play-icon" class="ion-skip-backward"></i>
          </button>
          <button class="play button_layout" id="music_bar_play_button" onclick="playPause()">
            <i id="play-icon" class="ion-play"></i></button>
           <button class="skip_forward button_layout">
            <i id="play-icon" class="ion-skip-forward"></i>
          </button>
          <button class="repeat button_layout">
            <ion-icon style="margin-top: 10px;" name="repeat"></ion-icon>
          </button>
        </div>
      </div>
      <div class='audio-player'>
        <div class="seek-bar">
          <div class="fill"></div>
          <div class="handle"></div>
        </div>
      </div>
    </div>
       <div class="right_footer">
        <div class="right_elements">
          <button id="like_button" class="like_button">
            <ion-icon name="flame"></ion-icon>
          </button>
          <button id="broadcast_text" class="broadcast button_layout" data-key ="<%=getKey%>" data-session="<%= current_user.id.to_json if logged_in? %>">
            <i id="play-icon" class="ion-wifi"></i>
          </button>
          <button id="renderAddPlaylist" class="playlist button_layout">
            <ion-icon name="list"></ion-icon>
          </button>
        </div>
        <div class="right_elements">
          <button class="volume button_layout"><i class="ion-volume-high"></i></button>
          <div class="volume_bar">
            <div class="volume_fill"></div>
            <div class="volume_handle"></div>
          </div>
        </div>
      </div>
  </div>

  <div id="add-playlist-modal" class="modal-add-playlist">
    <div class="modal-content-add-playlist">
      <%= render partial: "playlists/modal_playlists", locals: {song_pos: nil, ts: "default", currentplaylist: 0} %>
    </div>
  </div>

